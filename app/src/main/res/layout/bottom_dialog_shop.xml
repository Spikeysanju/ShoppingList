<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorting Orders"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:fontFamily="@font/googlesans_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sortGroup">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date Created"

                android:checked="true"
                android:id="@+id/dateSort"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date Modified"
                android:checked="false"
                android:id="@+id/dateModifiedSort"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:checked="false"
                android:id="@+id/colorSort"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Alphabetically"
                android:checked="false"
                android:id="@+id/alphaSort"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reminder Date"
                android:checked="false"
                android:id="@+id/reminderSort"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />

        </RadioGroup>


    </LinearLayout>

</RelativeLayout>